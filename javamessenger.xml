<?xml version="1.0" encoding="UTF-8"?>
<project name="javamessenger" default="all">
  
  
  <property file="javamessenger.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.javax.json.processing-1.0.classpath">
    <pathelement location="${basedir}/lib/javax.json.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <path id="library.derby-10.11.1.1.classpath">
    <pathelement location="/Users/adib/Library/Preferences/IntelliJIdea14/jdbc-drivers/derby-10.11.1.1.jar"/>
  </path>
  
  <path id="library.derbyclient-10.11.1.1.classpath">
    <pathelement location="/Users/adib/Library/Preferences/IntelliJIdea14/jdbc-drivers/derbyclient-10.11.1.1.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module JavaMessenger -->
  
  <dirname property="module.javamessenger.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.javamessenger" value="${jdk.home.1.8}"/>
  <property name="module.jdk.bin.javamessenger" value="${jdk.bin.1.8}"/>
  <property name="module.jdk.classpath.javamessenger" value="jdk.classpath.1.8"/>
  
  <property name="compiler.args.javamessenger" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="javamessenger.output.dir" value="${module.javamessenger.basedir}/out/production/JavaMessenger"/>
  <property name="javamessenger.testoutput.dir" value="${module.javamessenger.basedir}/out/test/JavaMessenger"/>
  
  <path id="javamessenger.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javamessenger.module.production.classpath">
    <path refid="${module.jdk.classpath.javamessenger}"/>
    <path refid="library.javax.json.processing-1.0.classpath"/>
    <path refid="library.derby-10.11.1.1.classpath"/>
    <path refid="library.derbyclient-10.11.1.1.classpath"/>
  </path>
  
  <path id="javamessenger.runtime.production.module.classpath">
    <pathelement location="${javamessenger.output.dir}"/>
    <path refid="library.javax.json.processing-1.0.classpath"/>
    <path refid="library.derby-10.11.1.1.classpath"/>
    <path refid="library.derbyclient-10.11.1.1.classpath"/>
  </path>
  
  <path id="javamessenger.module.classpath">
    <path refid="${module.jdk.classpath.javamessenger}"/>
    <pathelement location="${javamessenger.output.dir}"/>
    <path refid="library.javax.json.processing-1.0.classpath"/>
    <path refid="library.derby-10.11.1.1.classpath"/>
    <path refid="library.derbyclient-10.11.1.1.classpath"/>
  </path>
  
  <path id="javamessenger.runtime.module.classpath">
    <pathelement location="${javamessenger.testoutput.dir}"/>
    <pathelement location="${javamessenger.output.dir}"/>
    <path refid="library.javax.json.processing-1.0.classpath"/>
    <path refid="library.derby-10.11.1.1.classpath"/>
    <path refid="library.derbyclient-10.11.1.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javamessenger">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javamessenger">
    <patternset refid="excluded.from.module.javamessenger"/>
  </patternset>
  
  <path id="javamessenger.module.sourcepath">
    <dirset dir="${module.javamessenger.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javamessenger" depends="compile.module.javamessenger.production,compile.module.javamessenger.tests" description="Compile module JavaMessenger"/>
  
  <target name="compile.module.javamessenger.production" depends="register.custom.compilers" description="Compile module JavaMessenger; production classes">
    <mkdir dir="${javamessenger.output.dir}"/>
    <javac2 destdir="${javamessenger.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javamessenger}/javac">
      <compilerarg line="${compiler.args.javamessenger}"/>
      <bootclasspath refid="javamessenger.module.bootclasspath"/>
      <classpath refid="javamessenger.module.production.classpath"/>
      <src refid="javamessenger.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javamessenger"/>
    </javac2>
    
    <copy todir="${javamessenger.output.dir}">
      <fileset dir="${module.javamessenger.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javamessenger.tests" depends="register.custom.compilers,compile.module.javamessenger.production" description="compile module JavaMessenger; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javamessenger" description="cleanup module">
    <delete dir="${javamessenger.output.dir}"/>
    <delete dir="${javamessenger.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.javamessenger" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.javamessenger" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>